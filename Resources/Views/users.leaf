<!DOCTYPE html>
<html>
    <head>
        <title>Users</title>
        
        <!-- Links Bootstrap, a CSS framework for styling -->
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            
            <h1 class="mt-3">User List</h1>
            
            <!-- Creates a form that POSTs to /users when submitted -->
            <form method="POST" action="/users">
                <div class="input-group">
                    
                    <!-- Creates an input text field -->
                    <input type="text" name="username" class="form-control">
                    
                    <div class="input-group-append">
                        <!-- Creates a button to submit the form -->
                        <button class="btn btn-outline-secondary" type="submit">Create</button>
                    </div>
                    
                </div>
            </form>
            
        </div>
        
        #for(user in users) {
            <p class="mb-0">#(user.username)</p>
        }
    </body>
</html>
